.search-con{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding-top: 7px;
  position: relative;
  background-color: #fafafa;
}
.search-con .iconfont{
  position: absolute;
  top: 30rpx;
  left: 60rpx;
  font-size: 37rpx;
}
.search-con input{
  width: 78%;
  background-color: #fff;
  margin-left: 5%;
  box-sizing: border-box;
  padding:  0 20rpx 0 66rpx;
  height: 72rpx;
  line-height:72rpx;
  border-top-left-radius:6rpx;
  border-bottom-left-radius:6rpx;
}
.search-con navigator{
  width: 12%;
  background-color: #fff;
  box-sizing: border-box;
  height: 72rpx;
  text-align: center;
  line-height:72rpx;
  font-size: 26rpx;
  border-top-right-radius:6rpx;
  border-bottom-right-radius:6rpx;
  margin-left: -8rpx;
}
.search-hot{
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.search-hot-class{
  padding: 30rpx 0;
}
.search-hot-class navigator{
  display: inline-block;
  border: 1px solid #aaa;
  padding: 6rpx 8rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
}
